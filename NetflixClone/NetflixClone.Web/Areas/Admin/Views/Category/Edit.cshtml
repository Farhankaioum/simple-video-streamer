@model CategoryEditViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="container-fluid">
    <form method="post" asp-controller="Category" asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back</a>
            <input type="submit" value="Update" class="btn btn-success ml-2" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
