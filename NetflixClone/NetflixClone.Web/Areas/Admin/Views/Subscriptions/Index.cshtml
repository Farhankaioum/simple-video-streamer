@model SubscriptionIndexViewModel

@{
    ViewBag.Title = "Index Page";
}

<div class="container-fluid">
    <div class="float-right mt-4 mb-2">
        <a asp-controller="Subscriptions" asp-action="Create" class="btn btn-info">Create new</a>
    </div>
    @if (Model.SubscriptionList.Count > 0)
    {
        <table class="table table-responsive">
            <tr>
                <td>Name</td>
                <td>Description</td>
                <td>Short Description</td>
                <td>Price</td>
                <td>Duration In Month</td>
                <td>Created At</td>
                <td>Action</td>
            </tr>
            @foreach (var category in Model.SubscriptionList)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.ShortDescription</td>
                    <td>@category.Price</td>
                    <td>@category.DurationInMonth</td>
                    <td>@category.CreatedAt.ToString("dd MM yyyy")</td>
                    <td>
                        <div class="form-group">
                            <a class="btn btn-success float-left" asp-controller="Subscriptions" asp-action="Edit" asp-route-id="@category.Id">Edit </a>
                            <form method="post" asp-controller="Subscriptions" asp-action="Delete" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-danger mt-2" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div>
            <h4>No records found!</h4>
        </div>
    }

</div>
