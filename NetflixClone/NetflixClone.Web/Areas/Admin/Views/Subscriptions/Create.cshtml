@model SubscriptionCreateViewModel

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid col-md-8 col-sm-10">
    <form method="post" asp-controller="Subscriptions" asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DurationInMonth"></label>
            <input asp-for="DurationInMonth" class="form-control" />
            <span asp-validation-for="DurationInMonth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription"></label>
            <textarea asp-for="ShortDescription" class="form-control"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-controller="Subscriptions" asp-action="Index" class="btn btn-danger">Back</a>
            <input type="submit" value="Save" class="btn btn-success ml-2" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
