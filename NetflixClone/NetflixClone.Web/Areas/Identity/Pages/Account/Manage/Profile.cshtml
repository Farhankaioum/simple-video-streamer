@page
@model ProfileModel

@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor httpContextAccessor
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = string.IsNullOrWhiteSpace(Model.Input.PhotoUrl) ? "/images/user-icon.jpg" : $"/videos/{Model.Input.PhotoUrl}";
}

<div><div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="home" asp-action="index">Home</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                <li class="ml-5"><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Profile">Edit Profile</a></li>
            </ol>
        </nav>

        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="@url" alt="Admin" class="rounded-circle user-main-image" width="150">
                            <div class="mt-3">
                                <h4>@Model.Input.FullName</h4>
                                <p class="text-secondary mb-1"><a href="#">1 Rating</a></p>
                                <p class="text-muted font-size-sm"><a href="#">0 Badge</a></p>

                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Input.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Input.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Input.Address
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pt-3">
                    <p class="text-uppercase">@Model.Input.FullName's series sheleves</p>
                    <hr />
                    <ul class="list-group list-group-horizontal">
                        <li class="list-group-item"><a href="#">watch()</a></li>
                        <li class="list-group-item"><a href="#">currently-watch</a></li>
                        <li class="list-group-item"><a href="#">to-watch</a></li>
                    </ul>
                </div>
                <div class="pt-3">
                    <p class="text-uppercase">@Model.Input.FullName’S RECENT UPDATES</p>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div></div>
