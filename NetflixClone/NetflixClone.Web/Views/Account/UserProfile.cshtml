@model UserProfileModel
@{
    ViewData["Title"] = "UserProfile";
}

<div class="container">
    <div class="w-100 p-3" style="background-color: #E5E8E8">
        <h3>User Profile</h3>
    </div>
    <form class="mt-3" asp-controller="Account" asp-action="UserProfile">
        <div class="form-group row">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
            <img src="@Model.ImageUrl" style="border-radius: 50%" width="100" height="100" alt="User Image" />
        </div>
        <hr>
        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">@Model.UserName</div>
        </div>
        <hr>
        <div class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">@Model.FullName</div>
        </div>
        <hr>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">@Model.Email</div>
        </div>
        <hr>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" placeholder="**********" disabled class="form-control">
                <a asp-area="" asp-controller="Account" asp-action="ChangePassword" style="text-decoration: none">Change</a>
            </div>
        </div>
    </form>
</div>