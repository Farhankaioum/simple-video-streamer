@model VideoDetailViewModel

@{
    ViewBag.Title = "Detail Page";
}

@section Styles {
    <link href="https://vjs.zencdn.net/7.11.4/video-js.css" rel="stylesheet" />
    <style>
    </style>
}

<div class="d-flex justify-content-center">
    <video id="my-video"
           class="video-js vjs-big-play-centered"
           controls
           preload="auto"
           width="640"
           height="320"
           poster="/images/thambnail.png"
           data-setup="{}">
        <source src="/videos/@Model.Url" type="video/mp4" />
        <source src="/videos/@Model.Url" type="video/webm" />
        <p class="vjs-no-js">
            To view this video please enable JavaScript, and consider upgrading to a
            web browser that
            <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
        </p>
    </video>
</div>
<div class="form-group">
    <button type="button" onclick="submitError()" class="btn btn-danger">Playing Error</button>
    <button type="button" onclick="submitError()" class="btn btn-info">Buffer Error</button>
</div>
<input type="hidden" class="videoId" value="@Model.Id" />

@section Scripts {
    <script src="https://vjs.zencdn.net/7.11.4/video.min.js"></script>
    <script src="~/js/videoScript.js"></script>
}
