@using Microsoft.AspNetCore.Identity
@using X.PagedList;
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<Video>
@using NetflixClone.Foundation.Entities;
@inject SignInManager<ApplicationUser> signInManager

@{
    ViewData["Title"] = "Index Page";
}

<div class="row">
    @foreach (var video in Model)
    {
        <div class="col-md-3 mb-4">
            @*<a asp-controller="Home" asp-action="Details" asp-route-id="@review.Id" style="text-decoration:none; color:#999">*@
            <div class="card text-left">
                <img src="/images/thambnail.png" class="card-img-top" alt="Card image cap">
                <div class="card-body text-center">
                    <h5 class="card-title text-left">
                        <a class="text-dark" asp-controller="Videos" asp-action="Detail" asp-route-id="@video.Id">@video.Title</a>
                    </h5>
                    <p class="card-text text-left">@video.Description</p>
                    <div class="text-left">
                        <a asp-controller="Videos" asp-action="Detail" asp-route-id="@video.Id" class="btn btn-outline-success btn-sm mr-2">Watch</a>
                    </div>
                </div>
            </div>
            @*</a>*@
        </div>
    }

</div>

@if (Model.Count > 0)
{
    <div class="float-right custom-pager">
        @Html.PagedListPager(Model, c => Href("~/Videos/Index?page=" + c), PagedListRenderOptionsBase.TwitterBootstrapPager)
    </div>
}

